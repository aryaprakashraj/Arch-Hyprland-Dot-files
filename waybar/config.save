{    // --- GENERAL BAR CONFIGURATION ---
    "layer": "top",
    "position": "top",
    "mod": "hide",
    "height": 30,
    "spacing": 4,
    "margin" : 2,

    // --- MODULE ORDER ---
    "modules-left": [
        "hyprland/window"
    ],
    "modules-center": [
	"pulseaudio",
        "clock",
	"backlight"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "battery",
        "network",
	
    ],

    // --- MODULE DEFINITIONS ---

    "hyprland/workspaces": {
        "format": "{icon}",
	"format-icons": {
    	    "active": "[■]",
    	    "default": "[ ]",
    	    "urgent": "[!]"
 	},
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
   },

    "hyprland/window": {
        "format": "  {}",
        "max-length": 64,
        "tooltip": true
    },

"backlight": {
    "device": "intel_backlight",
    "format": "{percent}  "
},

"pulseaudio": {
    "format": "  {volume}",
    "format-muted": "Muted ",
    "scroll-step": 5
},


    "clock": {
        "interval": 60,
        "format": "{:%I:%M %p}",
        "tooltip-format": "{:%A, %d %B %Y}"
    },

    // --- ESSENTIAL RIGHT MODULES ---

    "cpu": {
        "format": "  {usage}%",
        "tooltip": false
    },

    "memory": {
        "format": "󰍛  {used}/{total}G",
        "tooltip": true
    },

    "battery": {
        "format": "{icon}  {capacity}%",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        "format-full": "  {capacity}%",
        "format-icons": ["", "", "", "", ""],
        "interval": 60,
        "states": {
            "warning": 15,
            "critical": 5
        }
    },

    "network": {
        "format-wifi": "  {essid}",
        "format-ethernet": "󰈷  Wired",
        "format-disconnected": "󰖹  Off",
        "tooltip-format": "{ifname}  {ipaddr}",
        "on-click": "nm-connection-editor"
    }
}
